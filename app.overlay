/ {
    aliases {
        /* Create a friendly name for our C code to reference */
        my-button = &button0;
    };

    buttons {
        compatible = "gpio-keys";
        button0: button_0 {
            /* Port 0, Pin 3, Active Low, Internal Pull-Up enabled */
            gpios = <&gpio0 3 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
            label = "User Button on P0.03";
        };
    };
};
